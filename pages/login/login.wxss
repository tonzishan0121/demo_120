/* pages/login/login.wxss */
.container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #f5f5f5;
  flex-direction: column;
}
/*logo*/
.login-form {
  width: 80%;
  background-color: #ffffff;
  padding: 40rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.logo {
  text-align: center;
  margin-bottom: 40rpx;
}

.logo-image {
  width: 200rpx;
  height: 200rpx;
}
/*input*/
.input-group {
  border-bottom: 1rpx solid #e5e5e5;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
}

.input-prefix {
  margin-right: 20rpx;
}

.iconfont {
  font-size: 40rpx;
  color: #1e90ff;
}

.input {
  flex: 1;
  height: 80rpx;
  font-size: 30rpx;
}

.login-btn {
  background-color: #1e90ff;
  color: #ffffff;
  border-radius: 40rpx;
  font-size: 34rpx;
  padding: 10rpx 0;
  text-align: center;
  margin-bottom: 20rpx;
}

.skip-login {
  text-align: center;
  color: #1e90ff;
  font-size: 28rpx;
}
/*提示信息*/
.info-view {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80%;
  padding: 15px;
  background-color: #f0f0f0;
  border-radius: 8px;
  margin-bottom: 20px;
}

.info-text {
  font-family: Roboto;
  font-size: 14px;
  font-weight: 400;
  line-height: 19.5px;
  color: #333;
  text-align: center;
}