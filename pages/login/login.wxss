/* pages/login/login.wxss */
.container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #f5f5f5;
}

.login-form {
  width: 80%;
  background-color: #ffffff;
  padding: 40rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.logo {
  text-align: center;
  margin-bottom: 40rpx;
}

.logo-image {
  width: 200rpx;
  height: 200rpx;
}

.input-group {
  border-bottom: 1rpx solid #e5e5e5;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
}

.input-prefix {
  margin-right: 20rpx;
}

.iconfont {
  font-size: 40rpx;
  color: #1e90ff; /* 120急救主题颜色 */
}

.input {
  flex: 1;
  height: 80rpx;
  font-size: 30rpx;
}

.login-btn {
  background-color: #1e90ff;
  color: #ffffff;
  border-radius: 40rpx;
  font-size: 34rpx;
  padding: 10rpx 0;
  text-align: center;
  margin-bottom: 20rpx;
}

.skip-login {
  text-align: center;
  color: #1e90ff;
  font-size: 28rpx;
}
