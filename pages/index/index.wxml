<view class="app">
  <!-- 数据卡片区域 -->
  <view class="data-cards">
    <view class="data-card">
      <view class="card-title">今日急救事件</view>
      <view class="card-number">286</view>
      <view class="card-trend">↑12.5%</view>
    </view>
    <view class="data-card">
      <view class="card-title">在线急救车辆</view>
      <view class="card-number">42</view>
      <view class="card-trend">↑8.3%</view>
    </view>
    <view class="data-card">
      <view class="card-title">在岗医护人员</view>
      <view class="card-number">156</view>
      <view class="card-trend">↓3.2%</view>
    </view>
    <view class="data-card">
      <view class="card-title">平均响应时间</view>
      <view class="card-number">8.5分钟</view>
      <view class="card-trend">↓6.7%</view>
    </view>
  </view>

  <!-- 地图和图例 -->
  <view class="map-container">
    <image class="map-image" mode="aspectFill" src="/static/上海.jpg"/>
    <view class="map-legend">
      <view class="legend-item">
        <view class="legend-dot available"></view>
        <text>空闲车辆</text>
      </view>
      <view class="legend-item">
        <view class="legend-dot busy"></view>
        <text>任务中</text>
      </view>
    </view>
  </view>

  <!-- 快速操作按钮 -->
  <view class="quick-actions">
    <view class="action-btn emergency">
      <navigator url="/pages/emsPanel/emsPanel"><text>资源\n调度</text></navigator>
    </view>
    <view class="action-btn dispatch">
      <navigator url="/pages/emergencyClass/emergencyClass"><text>急救\n培训</text></navigator>
    </view>
  </view>
  <!-- 任务完成情况 -->
  <view class="task-panel">
    <view class="task-header">
      <view class="task-title">今日任务完成情况</view>
      <view class="task-percent">78%</view>
    </view>
    <view class="progress-bar">
      <view class="progress-inner"></view>
    </view>
    <view class="task-stats">
      <view class="stat-item">
        <view class="stat-number">42</view>
        <view class="stat-label">已完成</view>
      </view>
      <view class="stat-item">
        <view class="stat-number">12</view>
        <view class="stat-label">进行中</view>
      </view>
      <view class="stat-item">
        <view class="stat-number">8</view>
        <view class="stat-label">待处理</view>
      </view>
    </view>
  </view>
</view>